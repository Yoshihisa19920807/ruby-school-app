.card
  .card-header
    .fa.fa-user
      = link_to enrollment.user, user_path(enrollment.user)
    \/
    .fa.fa-clock
      = "#{time_ago_in_words(enrollment.updated_at)} ago"
    \/
    .fa.fa-graduation-cap
      = link_to enrollment.course, course_path(enrollment.course)
  .card-body
    .text-warning.fa.fa-star
      -# = enrollment.rating
    %b= enrollment.rating
    -# %br
    -# .fa.fa-dollar-sign
    -#   = enrollment.price
    -# %br
    .review{style: "display:flex; align-items:center;"}
      .fa.fa-comment.me-2
      -# = simple_format(enrollment.review)
      = enrollment.review
  - if current_user
    .card-footer
      - if policy(enrollment).edit?
        = link_to 'Edit Review', edit_enrollment_path(enrollment)
